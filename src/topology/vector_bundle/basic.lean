lemma symm_apply_eq_mk_continuous_linear_equiv_at_symm (e : trivialization R F E) (b : B)
  (hb : b ‚àà e.base_set) (z : F) :
  e.to_local_homeomorph.symm ‚ü®b, z‚ü©
